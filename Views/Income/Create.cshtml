@model IEMS.Models.Income

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Add Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Background and form container styling */
        body {
            background: url('/images/pexels-pixabay-164527.jpg') no-repeat center center fixed;
            background-size: cover;
            background-blend-mode: overlay;
            font-family: 'Georgia', 'Times New Roman', Times, serif;
        }

        .form-container {
            max-width: 600px;
            background: rgba(256, 256, 256, 0.7); /* White with 70% transparency */
            color: black;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 40px;
        }

        .form-control {
            background-color: #f1f8ff; /* Light background for input fields */
            border: 1px solid #ddd;
            color: #333;
        }

            .form-control:focus {
                border-color: #0073e6;
                box-shadow: 0 0 5px rgba(0, 115, 230, 0.5);
            }

        .btn-primary {
            background-color: #0073e6; /* Matching blue button color */
            border: none;
        }

            .btn-primary:hover {
                background-color: #4b0082; /* Indigo color on hover */
            }

        .text-danger {
            color: #ff5c5c; /* Red text for validation errors */
        }

        .back-link {
            color: #ffffff;
        }

            .back-link:hover {
                text-decoration: underline;
                color: #e0f0ff;
            }

        .back-btn {
            display: inline-block; /* Makes it behave like a button */
            background-color: #007bff; /* Button background color (e.g., Bootstrap primary color) */
            color: #fff; /* Text color */
            padding: 10px 20px; /* Adds padding for a button-like appearance */
            text-decoration: none; /* Removes underline */
            border-radius: 5px; /* Optional: rounded corners */
            transition: background-color 0.3s ease; /* Smooth hover effect */
        }

            .back-btn:hover {
                background-color: #0056b3; /* Darker shade on hover */
                text-decoration: none;
                color: #fff; /* Keep text color consistent */
            }
    </style>
</head>
<body>

    <div class="container d-flex justify-content-center">
        <div class="form-container">
            <h1 class="text-center">Create Income</h1>
            <h4>Income Details</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Source" class="control-label">Source</label>
                    <input asp-for="Source" class="form-control" />
                    <span asp-validation-for="Source" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Amount" class="control-label">Amount</label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Date" class="control-label">Date</label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Account" class="control-label">Account</label>
                    <select asp-for="Account" class="form-control">
                        <option value="">-- Select Category --</option>
                        <option value="Cash">Cash</option>
                        <option value="Accounts">Accounts</option>
                        <option value="CreditCard">CreditCard</option>
                    </select>
                    <span asp-validation-for="Account" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-action="Index" class="back-btn">Back to List</a>
            </div>
        </div>
    </div>

    <!-- Add Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
